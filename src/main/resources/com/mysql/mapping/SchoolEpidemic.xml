<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.springboot.shiro.dao.SchoolEpidemicMapper">

    <resultMap id="BaseResultMap" type="com.springboot.shiro.dao.bean.SchoolEpidemic">
        <id column="id" property="id" jdbcType="INTEGER"/>
        <result column="date" property="date"/>
        <result column="name" property="name" jdbcType="VARCHAR"/>
        <result column="trip" property="trip" jdbcType="VARCHAR"/>
        <result column="tag" property="tag" jdbcType="VARCHAR"/>
    </resultMap>


    <sql id="Base_Column_List">
        id, date, name, trip, tag
    </sql>

    <insert id="addSchoolEpidemic">
        insert into schoole_epidemic (date, name, trip, tag) values (#{date}, #{name}, #{trip}, #{tag})
    </insert>

    <select id="listSystemMenu" resultMap="BaseResultMap">
        select
        <include refid="Base_Column_List"/>
        from system_menu
    </select>

</mapper>